<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Administrar Productos | Electronics Store</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
    rel="stylesheet"
  >
  <style>
    :root {
      --bg-gradient: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
      --card-bg: rgba(255, 255, 255, 0.05);
      --accent: #b388ff;
      --accent-strong: #7b2ff7;
      --accent-strong-2: #f107a3;
      --danger: #ff3b3b;
      --danger-2: #ff0077;
      --text-main: #f1f1f1;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    body {
      background: var(--bg-gradient);
      color: var(--text-main);
      min-height: 100vh;
      display: flex;
    }

    .sidebar {
      width: 260px;
      background: rgba(10, 10, 25, 0.98);
      border-right: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 4px 0 20px rgba(0, 0, 0, 0.4);
      padding: 1.5rem 1rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      position: sticky;
      top: 0;
      height: 100vh;
    }

    .sidebar-logo {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--accent);
      text-shadow: 0 0 15px var(--accent);
      margin-bottom: 0.5rem;
    }

    .sidebar-subtitle {
      font-size: 0.85rem;
      opacity: 0.75;
    }

    .sidebar-nav {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
      margin-top: 1rem;
    }

    .sidebar-link {
      display: block;
      padding: 0.7rem 0.9rem;
      border-radius: 10px;
      text-decoration: none;
      color: #e0dcff;
      font-size: 0.93rem;
      background: transparent;
      border: 1px solid transparent;
      transition: all 0.25s ease;
    }

    .sidebar-link:hover {
      background: rgba(179, 136, 255, 0.08);
      border-color: rgba(179, 136, 255, 0.5);
      box-shadow: 0 0 12px rgba(179, 136, 255, 0.4);
      transform: translateX(3px);
    }

    .sidebar-link.active {
      background: linear-gradient(135deg, var(--accent-strong), var(--accent-strong-2));
      box-shadow: 0 0 15px rgba(179, 136, 255, 0.7);
      color: #fff;
    }

    .sidebar-footer {
      margin-top: auto;
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
    }

    .btn-logout {
      background: linear-gradient(90deg, var(--danger), var(--danger-2));
      border-radius: 10px;
      padding: 0.7rem 0.9rem;
      border: none;
      color: #fff;
      text-align: center;
      text-decoration: none;
      font-weight: 500;
      cursor: pointer;
      box-shadow: 0 0 15px rgba(255, 0, 77, 0.5);
      transition: all 0.25s ease;
    }

    .btn-logout:hover {
      transform: translateY(-2px);
      box-shadow: 0 0 25px rgba(255, 0, 77, 0.9);
    }

    .btn-store {
      display: block;
      padding: 0.6rem 0.9rem;
      border-radius: 10px;
      text-align: center;
      text-decoration: none;
      color: #fff;
      border: 1px solid rgba(179, 136, 255, 0.6);
      background: rgba(179, 136, 255, 0.12);
      box-shadow: 0 0 10px rgba(179, 136, 255, 0.4);
      font-size: 0.9rem;
      transition: all 0.25s ease;
    }

    .btn-store:hover {
      background: rgba(179, 136, 255, 0.25);
      transform: translateY(-1px);
    }

    .main {
      flex: 1;
      padding: 2rem 3rem;
    }

    .main-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.6rem;
    }

    .main-header-title {
      font-size: 1.7rem;
      text-shadow: 0 0 12px var(--accent);
    }

    .btn-primary,
    .btn-secondary,
    .btn-danger {
      padding: 0.55rem 1.1rem;
      border-radius: 999px;
      border: none;
      cursor: pointer;
      font-size: 0.9rem;
      font-weight: 500;
      text-decoration: none;
      display: inline-block;
      transition: all 0.25s ease;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--accent-strong), var(--accent-strong-2));
      color: #fff;
      box-shadow: 0 0 15px rgba(179, 136, 255, 0.7);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 0 20px rgba(179, 136, 255, 0.9);
    }

    .btn-secondary {
      background: transparent;
      border: 1px solid rgba(179, 136, 255, 0.6);
      color: #fff;
    }

    .btn-secondary:hover {
      background: rgba(179, 136, 255, 0.2);
      transform: translateY(-1px);
    }

    .btn-danger {
      background: linear-gradient(90deg, var(--danger), var(--danger-2));
      color: #fff;
      box-shadow: 0 0 15px rgba(255, 0, 77, 0.5);
    }

    .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 0 25px rgba(255, 0, 77, 0.9);
    }

    .toolbar {
      display: flex;
      gap: 0.75rem;
      align-items: center;
      flex-wrap: wrap;
    }

    #buscador {
      padding: 0.55rem 0.9rem;
      border-radius: 999px;
      border: none;
      outline: none;
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
      min-width: 220px;
      box-shadow: 0 0 8px rgba(179, 136, 255, 0.4);
    }

    #buscador::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .table-wrapper {
      margin-top: 1.5rem;
      background: rgba(0, 0, 0, 0.25);
      border-radius: 15px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
      overflow: hidden;
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      min-width: 720px;
    }

    thead {
      background: rgba(0, 0, 0, 0.4);
    }

    th, td {
      padding: 0.8rem 0.9rem;
      text-align: left;
      font-size: 0.9rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    th {
      color: #e5e0ff;
      font-weight: 500;
    }

    tbody tr:hover {
      background: rgba(179, 136, 255, 0.08);
    }

    td img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(179, 136, 255, 0.5);
    }

    .acciones {
      display: flex;
      gap: 0.4rem;
      flex-wrap: wrap;
    }

    @media (max-width: 900px) {
      body {
        flex-direction: column;
      }
      .sidebar {
        flex-direction: row;
        align-items: center;
        height: auto;
        width: 100%;
        padding: 1rem;
        position: static;
      }
      .sidebar-nav {
        flex-direction: row;
        flex-wrap: wrap;
      }
      .sidebar-footer {
        flex-direction: row;
        margin-top: 0;
        margin-left: auto;
      }
      .main {
        padding: 1.5rem 1.2rem;
      }
      .table-wrapper {
        border-radius: 10px;
      }
    }
  </style>
</head>
<body>

  <aside class="sidebar">
    <div>
      <div class="sidebar-logo">Electronics Store</div>
      <div class="sidebar-subtitle">Panel de administraciÃ³n</div>

      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="sidebar-link">ðŸ“Š Dashboard</a>
        <a href="/admin/productos" class="sidebar-link active">ðŸ“¦ Productos</a>
        <a href="/admin/ventas" class="sidebar-link">ðŸ§¾ Ventas</a>
      </nav>
    </div>

    <div class="sidebar-footer">
      <a
        class="btn-store"
        href="http://127.0.0.1:5500/Electronics_Store/Frontend/index.html"
      >
        ðŸ›’ Volver a la tienda
      </a>
      <a class="btn-logout" href="/admin/logout">Cerrar sesiÃ³n</a>
    </div>
  </aside>

  <main class="main">
    <header class="main-header">
      <div>
        <h1 class="main-header-title">Productos</h1>
        <p>AdministrÃ¡ los productos disponibles en la tienda.</p>
      </div>

      <div class="toolbar">
        <input id="buscador" type="text" placeholder="Buscar producto..." />
        <a href="/admin/productos/nuevo" class="btn-primary">âž• Nuevo producto</a>
      </div>
    </header>

    <section class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>CategorÃ­a</th>
            <th>Imagen</th>
            <th style="width: 190px;">Acciones</th>
          </tr>
        </thead>
        <tbody id="tabla-productos">
          <% productos.forEach(p => { %>
          <tr>
            <td><%= p.nombre %></td>
            <td>$<%= p.precio %></td>
            <td><%= p.categoria %></td>
            <td>
              <% if (p.img) { %>
                <img src="<%= p.img %>" alt="<%= p.nombre %>">
              <% } else { %>
                <span style="opacity:.7;">Sin imagen</span>
              <% } %>
            </td>
            <td>
              <div class="acciones">
                <a
                  href="/admin/productos/editar/<%= p.id %>"
                  class="btn-secondary"
                >
                  Editar
                </a>
                <a
                  href="/admin/productos/eliminar/<%= p.id %>"
                  class="btn-danger"
                >
                  Eliminar
                </a>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>

  <script>
    const buscador = document.getElementById("buscador");
    const filas = document.querySelectorAll("#tabla-productos tr");

    buscador.addEventListener("input", () => {
      const filtro = buscador.value.toLowerCase();

      filas.forEach(fila => {
        const texto = fila.innerText.toLowerCase();
        fila.style.display = texto.includes(filtro) ? "" : "none";
      });
    });
  </script>
</body>
</html>
