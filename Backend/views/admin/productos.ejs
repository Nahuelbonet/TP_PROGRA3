<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Administrar Productos | Electronics Store</title>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
    rel="stylesheet"
  >

  <style>
    /* -------------------------------
       Variables de colores del panel
       ------------------------------- */
    :root {
      --bg-gradient: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
      --card-bg: rgba(255, 255, 255, 0.05);
      --accent: #b388ff;
      --accent-strong: #7b2ff7;
      --accent-strong-2: #f107a3;
      --danger: #ff3b3b;
      --danger-2: #ff0077;
      --text-main: #f1f1f1;
    }

    /* Reseteo b√°sico */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    /* Fondo del panel admin */
    body {
      background: var(--bg-gradient);
      color: var(--text-main);
      min-height: 100vh;
      display: flex;
    }

    /* Mini im√°genes dentro de la tabla */
    .admin-mini-img {
      width: 70px;
      height: 70px;
      object-fit: cover;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(179, 136, 255, 0.35);
      border: 1px solid rgba(255, 255, 255, 0.12);
      background: rgba(255, 255, 255, 0.05);
    }

    /* ------------------------------
       SIDEBAR (barra lateral)
       ------------------------------ */
    .sidebar {
      width: 260px;
      background: rgba(10, 10, 25, 0.98);
      border-right: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 4px 0 20px rgba(0, 0, 0, 0.4);
      padding: 1.5rem 1rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      position: sticky;
      top: 0;
      height: 100vh;
    }

    /* T√≠tulo del panel en el sidebar */
    .sidebar-logo {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--accent);
      text-shadow: 0 0 15px var(--accent);
      margin-bottom: 0.5rem;
    }

    .sidebar-subtitle {
      font-size: 0.85rem;
      opacity: 0.75;
    }

    /* Links del men√∫ lateral */
    .sidebar-nav {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
      margin-top: 1rem;
    }

    .sidebar-link {
      display: block;
      padding: 0.7rem 0.9rem;
      border-radius: 10px;
      text-decoration: none;
      color: #e0dcff;
      font-size: 0.93rem;
      background: transparent;
      border: 1px solid transparent;
      transition: all 0.25s ease;
    }

    /* Hover men√∫ */
    .sidebar-link:hover {
      background: rgba(179, 136, 255, 0.08);
      border-color: rgba(179, 136, 255, 0.5);
      box-shadow: 0 0 12px rgba(179, 136, 255, 0.4);
      transform: translateX(3px);
    }

    /* Link activo */
    .sidebar-link.active {
      background: linear-gradient(135deg, var(--accent-strong), var(--accent-strong-2));
      box-shadow: 0 0 15px rgba(179, 136, 255, 0.7);
      color: #fff;
    }

    /* Botones del pie del sidebar */
    .sidebar-footer {
      margin-top: auto;
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
    }

    .btn-logout {
      background: linear-gradient(90deg, var(--danger), var(--danger-2));
      border-radius: 10px;
      padding: 0.7rem 0.9rem;
      border: none;
      color: #fff;
      text-align: center;
      text-decoration: none;
      font-weight: 500;
      cursor: pointer;
      box-shadow: 0 0 15px rgba(255, 0, 77, 0.5);
    }

    /* -------------------------
       √ÅREA PRINCIPAL (TABLA)
       ------------------------- */
    .main {
      flex: 1;
      padding: 2rem 3rem;
    }

    .main-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.6rem;
    }

    .main-header-title {
      font-size: 1.7rem;
      text-shadow: 0 0 12px var(--accent);
    }

    /* Bot√≥n de crear producto */
    .btn-primary {
      background: linear-gradient(135deg, var(--accent-strong), var(--accent-strong-2));
      padding: 0.55rem 1.1rem;
      border-radius: 999px;
      text-decoration: none;
      color: #fff;
    }

    /* Contenedor de la tabla */
    .table-wrapper {
      margin-top: 1.5rem;
      background: rgba(0, 0, 0, 0.25);
      border-radius: 15px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      overflow-x: auto;
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
    }

    /* Tabla */
    table {
      width: 100%;
      border-collapse: collapse;
      min-width: 720px;
    }

    th, td {
      padding: 0.8rem 0.9rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    /* Botonera por cada producto */
    .acciones {
      display: flex;
      gap: 0.4rem;
    }

    .btn-secondary {
      border: 1px solid rgba(179, 136, 255, 0.6);
      padding: 0.55rem 1rem;
      border-radius: 999px;
      color: #fff;
      text-decoration: none;
    }

    .btn-danger {
      background: linear-gradient(90deg, #ff3b3b, #ff0077);
      padding: 0.55rem 1rem;
      border-radius: 999px;
      color: white;
      text-decoration: none;
    }
  </style>
</head>

<body>

  <!-- Sidebar del panel admin -->
  <aside class="sidebar">
    <div>
      <div class="sidebar-logo">Electronics Store</div>
      <div class="sidebar-subtitle">Panel de administraci√≥n</div>

      <!-- Opciones del men√∫ -->
      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="sidebar-link">üìä Dashboard</a>
        <a href="/admin/productos" class="sidebar-link active">üì¶ Productos</a>
        <a href="/admin/ventas" class="sidebar-link">üßæ Ventas</a>
      </nav>
    </div>

    <!-- Botones del final -->
    <div class="sidebar-footer">
      <a
        class="btn-store"
        href="http://127.0.0.1:5500/Electronics_Store/Frontend/index.html"
      >
        üõí Volver a la tienda
      </a>
      <a class="btn-logout" href="/admin/logout">Cerrar sesi√≥n</a>
    </div>
  </aside>

  <!-- Contenido principal -->
  <main class="main">

    <!-- Encabezado: t√≠tulo + buscador + bot√≥n crear -->
    <header class="main-header">
      <div>
        <h1 class="main-header-title">Productos</h1>
        <p>Administr√° los productos disponibles en la tienda.</p>
      </div>

      <div class="toolbar">
        <!-- Buscador live -->
        <input id="buscador" type="text" placeholder="Buscar producto..." />

        <!-- Bot√≥n a "Nuevo Producto" -->
        <a href="/admin/productos/nuevo" class="btn-primary">‚ûï Nuevo producto</a>
      </div>
    </header>

    <!-- Tabla completa de productos -->
    <section class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categor√≠a</th>
            <th>Imagen</th>
            <th>Acciones</th>
          </tr>
        </thead>

        <tbody id="tabla-productos">
          
          <% productos.forEach(p => { %>

          <tr>
            <!-- Nombre -->
            <td><%= p.nombre %></td>

            <!-- Precio -->
            <td>$<%= p.precio %></td>

            <!-- Categor√≠a -->
            <td><%= p.categoria %></td>

            <!-- Imagen -->
            <td>
              <% if (p.img) { %>
                <!-- Muestro mini imagen -->
                <img src="/assets/img/<%= p.img %>"
                     alt="<%= p.nombre %>"
                     style="width:60px;height:60px;border-radius:10px;object-fit:cover;">
              <% } else { %>
                <!-- Si no hay imagen -->
                <span style="opacity:.7;">Sin imagen</span>
              <% } %>
            </td>

            <!-- Acciones -->
            <td>
              <div class="acciones">
                <a href="/admin/productos/editar/<%= p.id %>" class="btn-secondary">
                  Editar
                </a>

                <a href="/admin/productos/eliminar/<%= p.id %>" class="btn-danger">
                  Eliminar
                </a>
              </div>
            </td>
          </tr>

          <% }) %>

        </tbody>
      </table>
    </section>
  </main>

  <script>
    // Busqueda en vivo dentro de la tabla de productos
    const buscador = document.getElementById("buscador");
    const filas = document.querySelectorAll("#tabla-productos tr");

    buscador.addEventListener("input", () => {
      const filtro = buscador.value.toLowerCase();

      filas.forEach(fila => {
        const texto = fila.innerText.toLowerCase();
        fila.style.display = texto.includes(filtro) ? "" : "none";
      });
    });
  </script>

</body>
</html>
